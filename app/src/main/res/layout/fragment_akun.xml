<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAkun">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="200dp" />

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/purple_200">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="200dp"
                        android:layout_height="139dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_akun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile"
                        android:layout_centerInParent="true"
                        android:text="Lat Ajus"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1">

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90dp"
                    android:layout_toRightOf="@+id/email"
                    android:text="selat.sumardiana@tabanankab.go.id"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/telpon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/email"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/hp" />

                <TextView
                    android:id="@+id/nomor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alamat"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@+id/telpon"
                    android:text="+62819993832"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/group"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/telpon"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/group" />

                <TextView
                    android:id="@+id/grp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nomor"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@+id/group"
                    android:text="+Add to Group"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/koment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/group"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/coment" />

                <TextView
                    android:id="@+id/coment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grp1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="55dp"
                    android:layout_toRightOf="@+id/koment"
                    android:text="Show All Coment"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/logout"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coment"
                    android:layout_marginTop="15dp"
                    android:layout_centerInParent="true"
                    android:text="Logout" />


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>